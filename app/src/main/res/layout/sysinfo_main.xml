<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sysinfor_rela_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sysinfor_linear_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6.0" >

        <Button
            android:id="@+id/btnGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/general_btn" />

        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/more_btn" />

        <Button
            android:id="@+id/btnDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/display_btn" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/camera_btn" />

        <Button
            android:id="@+id/btnMemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/memory_btn" />

        <Button
            android:id="@+id/btnAkku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/akku_btn" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relaGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rela_background_blue"
        android:visibility="visible" >

        <TextView
            android:id="@+id/lblManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/general_manufacturer"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblModell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblManufacturer"
            android:layout_marginLeft="3dp"
            android:text="@string/general_modell"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtModell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtManufacturer"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/devicememory_progressBar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtModell"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/devicememory_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/devicememory_progressBar"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblModell"
            android:layout_marginLeft="3dp"
            android:text="@string/general_product"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtModell"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblProduct"
            android:layout_marginLeft="3dp"
            android:text="@string/general_brand"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtProduct"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblBrand"
            android:layout_marginLeft="3dp"
            android:text="@string/general_serialnumber"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSerialnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtBrand"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />
        
        <ProgressBar
            android:id="@+id/usbmemory_progressBar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtSerialnumber"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/usbmemory_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/usbmemory_progressBar"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSupportedPictureSizes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtBrand"
            android:layout_marginRight="3dp"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" >

            <requestFocus
                android:duplicateParentState="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </TextView>

        <TextView
            android:id="@+id/lblDeviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSerialNumber"
            android:layout_marginLeft="3dp"
            android:text="@string/general_device_id"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDeviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtSerialnumber"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblTimeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDeviceId"
            android:layout_marginLeft="3dp"
            android:text="@string/general_timezone"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtTimeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtDeviceId"
            android:layout_marginRight="3dp"
            android:text="@string/general_unknow"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sysinfo_default_img"
            android:contentDescription="@string/image_content_discription" />

        <TextView
            android:id="@+id/txtConfigClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRestore"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/config_config_click"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>